<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#FFFFFF"
    tools:context=".HomeScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Welcome to"
        android:textSize="22sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Alzheimer's"
        android:textColor="#FF6D00"
        android:textSize="30sp"
        android:textStyle="italic"
        app:fontFamily="@font/amarante" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/textView2"
        android:text="Detection"
        android:textColor="#051CAE"
        android:textSize="30sp"
        android:textStyle="italic"
        app:fontFamily="@font/amarante" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/textView3"
        android:text="Game"
        android:textColor="#F81111"
        android:textSize="30sp"
        android:textStyle="italic"
        app:fontFamily="@font/amarante" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Play Game"
        android:textSize="24sp"
        app:fontFamily="@font/andika" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="199dp"
        android:layout_height="123dp"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:onClick="Playy"
        android:layout_marginTop="79dp"
        app:srcCompat="@drawable/playgame" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="166dp"
        android:layout_height="107dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="148dp"
        android:onClick="instructions"
        app:srcCompat="@drawable/instruction" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="143dp"
        android:layout_height="101dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="-17dp"
        android:layout_marginTop="148dp"
        android:layout_toRightOf="@id/imageView3"
        android:onClick="Results"
        app:srcCompat="@drawable/results" />

    <ImageView
    android:id="@+id/imageView3"
    android:layout_width="162dp"
    android:layout_height="108dp"
    android:layout_below="@id/imageView"
    android:layout_marginLeft="-49dp"
    android:layout_marginTop="142dp"
    android:layout_toRightOf="@id/textView2"
    app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="Instructions"
        android:textSize="20sp"
        app:fontFamily="@font/andika" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Settings"
        android:textSize="20sp"
        app:fontFamily="@font/andika" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textView7"
        android:text="Results"
        android:textSize="20sp"
        app:fontFamily="@font/andika" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignBottom="@id/textView7"
        android:layout_alignParentBottom="true"
        android:baselineAlignBottom="false"
        app:srcCompat="@drawable/mylogo" />

</RelativeLayout>