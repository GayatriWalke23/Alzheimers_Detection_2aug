<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".FamilyHistory"
    android:id="@+id/parentView">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="763dp"
        android:layout_height="183dp"
        android:layout_x="-173dp"
        android:layout_y="73dp"
        app:srcCompat="@drawable/family234" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="427dp"
        android:layout_height="137dp"
        android:layout_x="0dp"
        android:layout_y="-11dp"
        app:srcCompat="@drawable/strip" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_x="173dp"
        android:layout_y="17dp"
        app:srcCompat="@drawable/family1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="79dp"
        android:text="Family History and Lifestyle Patterns"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="338dp"
        android:layout_height="57dp"
        android:layout_x="50dp"
        android:layout_y="205dp"
        android:text="    Do you  have a close relative who has been diagnosed with Alzheimer's disease in the past ?"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_x="95dp"
        android:layout_y="259dp"
        android:background="#00E676"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_x="232dp"
        android:layout_y="253dp"
        android:background="#FF3D00"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold" />


</AbsoluteLayout>